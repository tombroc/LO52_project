<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:text="FIRE"
        android:id="@+id/buttonF"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"/>


    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:text="Turn Left"
        android:id="@+id/buttonL"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/buttonF"
        android:textSize="40dp"/>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="80dp"
        android:layout_height="200dp"
        android:text="Turn Right"
        android:id="@+id/buttonR"
        android:layout_above="@+id/buttonU"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/buttonF"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Go Down"
        android:id="@+id/buttonD"
        android:layout_above="@+id/buttonL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="40dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:text="Go Up"
        android:id="@+id/buttonU"
        android:layout_below="@+id/buttonL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:textSize="40dp" />


</RelativeLayout>
