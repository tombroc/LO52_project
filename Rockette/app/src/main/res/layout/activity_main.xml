<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="FIRE 1"
        android:id="@+id/buttonF1"
        android:layout_above="@+id/buttonU"
        android:layout_toLeftOf="@+id/buttonR"
        android:layout_toRightOf="@+id/buttonL" />

    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="FIRE 2"
        android:id="@+id/buttonF2"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/buttonF3"
        android:layout_toLeftOf="@+id/buttonR" />

    <Button
        android:layout_width="100dp"
        android:layout_height="45dp"
        android:text="FIRE 3"
        android:id="@+id/buttonF3"
        android:layout_below="@+id/buttonD"
        android:layout_toLeftOf="@+id/buttonR"
        android:layout_toRightOf="@+id/buttonL" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="65dp"
        android:layout_height="150dp"
        android:text="Turn Left"
        android:id="@+id/buttonL"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="65dp"
        android:layout_height="150dp"
        android:text="Turn Right"
        android:id="@+id/buttonR"
        android:layout_above="@+id/buttonU"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="Go Down"
        android:id="@+id/buttonD"
        android:layout_above="@+id/buttonL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="65dp"
        android:text="Go Up"
        android:id="@+id/buttonU"
        android:layout_below="@+id/buttonL"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" />


</RelativeLayout>
